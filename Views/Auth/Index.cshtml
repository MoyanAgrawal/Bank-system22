
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main.cshtml";
}

<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-md-7">
                <h1 class="display-5 fw-bold">Welcome to Hanara Bank</h1>
                <p class="lead text-muted">Simple. Secure. Local banking with modern convenience — savings, loans and fixed deposits tailored for you.</p>

                <div class="d-flex gap-3 mt-4">
                    <a class="btn btn-outline-secondary btn-lg" href="@Url.Action("CustLogin", "Auth")">Customer Login</a>
                    <a class="btn btn-outline-secondary btn-lg" href="@Url.Action("EmpLogin", "Auth")">Employee Login</a>
                </div>

                <ul class="list-unstyled mt-4">
                    <li class="mb-2"><strong>Safe &amp; insured:</strong> Your deposits are protected.</li>
                    <li class="mb-2"><strong>Transparent fees:</strong> No hidden charges.</li>
                    <li class="mb-2"><strong>Friendly support:</strong> Mon–Fri, 9:00–18:00.</li>
                </ul>
            </div>

            <div class="col-md-5 text-center">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <img src="~/Content/images/photo" class="img-fluid rounded" alt="Hanara Bank" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h4 class="mb-4">Our Services</h4>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Savings Accounts</h5>
                        <p class="card-text text-muted">Secure savings with a minimum balance requirement and competitive interest rates.</p>
                        <a href="@Url.Action("OpenAccount", "Employee")" class="stretched-link text-decoration-none">Open an account</a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-muted small">Min opening: Rs. 1,000</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Loans</h5>
                        <p class="card-text text-muted">Personal and business loans with simple EMI plans. Senior citizen rules available.</p>
                        <a href="@Url.Action("OpenAccount", "Employee")" class="stretched-link text-decoration-none">Apply for a loan</a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-muted small">Min loan: Rs. 10,000</div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Fixed Deposits</h5>
                        <p class="card-text text-muted">Flexible tenures and attractive rates to grow your savings safely.</p>
                        <a href="@Url.Action("OpenAccount", "Employee")" class="stretched-link text-decoration-none">Create FD</a>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-muted small">Maturity options available</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-primary text-white py-4">
    <div class="container">
        <div class="row text-center text-md-start align-items-center">
            <div class="col-md-8">
                <h5 class="mb-1">Need help getting started?</h5>
                <p class="mb-0 text-white-50">Call our support or visit a branch. We're happy to guide you through accounts and loans.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a class="btn btn-light btn-sm" href="tel:+911234567890">Call Support: +91 12345 67890</a>
            </div>
        </div>
    </div>
</section>


